@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<div class="content">
  <h2>Stylist Details</h2>
  <br />
  <h3>First Name: @Html.DisplayFor(model => model.FirstName)</h3>
  <h3>Last Name: @Html.DisplayFor(model => model.LastName)</h3>
  <h3>Years of Experience: @Html.DisplayFor(model => model.YearsOfExperience)</h3>
  <h3>Rank: @Html.DisplayFor(model => model.Rank)</h3>
  <h3>Specialty: @Html.DisplayFor(model => model.Specialty)</h3>
  <br />
  <br />
  <p>@Html.ActionLink("Edit information", "Edit", new { id = Model.StylistId })</p>
  <p>@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId })</p>

  <hr />
  <h2>Client List</h2>
  <br />
  @if (@Model.Clients.Count == 0)
  {
    <h3>No clients listed under this stylist yet!</h3>
  }
  else
  {
    <h3>Clients:</h3>
    <ul>
      @foreach (Client client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.FirstName}" + " " + $"{client.LastName}", "Details", "Clients", new { id = client.ClientId })</li>
      }
    </ul>
  }
  <br />
  <p>@Html.ActionLink("Go back and view all stylists", "Index")</p>
</div>
